@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Leave Application Form</h1>
        <p class="lead">For employees to fill to apply any type of leaves available provided by the company</p>
    </section>

    <div class="row">
        <section class="h-100 h-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-8 col-xl-6">
                        <div class="card rounded-3">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Leave Details</h3>
                                @using (Html.BeginForm("Create", "Home"))
                                {  @Html.AntiForgeryToken()
                                    <form asp-action="Create" class="px-ml-2">
                                        <div class="form-group m-4">
                                            <label for="employeeId">Employee Id</label>
                                  
                                            <input type="text" class="form-control" placeholder="Your Employee ID" name="employeeId">
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="startDate">Start Date</label>
                       
                                            <input id="startDate" class="form-control" type="datetime-local" name="startDate" />
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="endDate">End Date</label>
                           
                                            <input id="endDate" class="form-control" type="datetime-local" name="endDate" />
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="justification">Justification</label>
                              
                                            <input type="text" class="form-control" placeholder="Justification" name="justification">
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="fullName">Manager Name</label>
                     
                                            <input type="text" class="form-control" placeholder="Manager Employee ID" name="managerEmployeeId">
                                        </div>
                                        <button type="submit" class="btn btn-success btn-lg m-4">Submit</button>

                                    </form>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>